<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNetCore_5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-info border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Class Routine</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav-tabs navbar-nav flex-grow-1 text-warning">
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item ">
                                    <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Administrator" asp-action="Index">Administrator</a>
                                </li>
                            }

                            @*<li class="nav-item">
                                <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>*@
                            
                            <li class="nav-item ">
                                <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Subject" asp-action="Index">Subject</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Classes" asp-action="Index">Classes</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="ClassRoom" asp-action="Index">ClassRoom</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="ClassRoutine" asp-action="Index">ClassRoutine</a>
                            </li>                            
                            <li class="nav-item">
                                <a href="#" class="navbar-brand">Welcome_ @User.Identity.Name</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li nav-item>
                                <partial name="_LoginPartial" />
                            </li>
                        }
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - DotNetCore_5 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

