@model ClassRoutineManagement.ViewModels.ClassRoutineCreateViewModel

<h4>Class Routine</h4>

<div class="modal fade" id="addClassRoutine">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addRoutineLabel">Add Routine</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id" />
                        <label asp-for="DayOfWeek" class="control-label"></label>
                        <input asp-for="DayOfWeek" class="form-control" />
                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime" class="control-label"></label>
                        <input asp-for="EndTime" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ClassesId" class="control-label"></label>
                        <select asp-for="ClassesId" asp-items="@(new SelectList(@ViewBag.Classes,"Id", "CStage"))" class="form-control">
                            <option value="">Select Class</option>
                        </select>
                        <span asp-validation-for="ClassesId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectId" class="control-label"></label>
                        <select asp-for="SubjectId" asp-items="@(new SelectList(@ViewBag.Subjects,"Id", "SubjectName"))" class="form-control">
                            <option value="">Select Subject</option>
                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassRoomId" class="control-label"></label>
                        <select asp-for="ClassRoomId" asp-items="@(new SelectList(@ViewBag.ClassRooms,"Id", "RoomNo"))" class="form-control">
                            <option value="">Select Room</option>
                        </select>
                        <span asp-validation-for="ClassRoomId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update Routine" class="btn btn-primary" />

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary" data-save="modal">Update</button>*@
            </div>
        </div>
    </div>
</div>