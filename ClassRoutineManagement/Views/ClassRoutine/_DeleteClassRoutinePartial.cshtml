@model ClassRoutineManagement.ViewModels.ClassRoutineCreateViewModel

<h4>Class Routine</h4>

<div class="modal fade" id="deleteRoutine">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addRoutineLabel">Are you sure you want to delete this record?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="Delete" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id" />
                        @*<label asp-for="Id" class="control-label">@Model.Id</label>*@
                        @Html.DisplayFor(model => model.Id)
                    </div>
                    <div class="form-group">
                        @Html.DisplayFor(model => model.DayOfWeek)
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label">@Model.StartTime</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime" class="control-label">@Model.EndTime</label>
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.ClassesId):
                        @Html.DisplayFor(model => model.ClassesId)
                    </div>
                    <div class="form-group">
                        @*<label asp-for="SubjectName" class="control-label">@Model.SubjectName</label>*@
                        @Html.DisplayNameFor(model => model.SubjectId)
                        @Html.DisplayFor(model => model.SubjectId)
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(model => model.ClassRoomId)
                        @Html.DisplayFor(model => model.ClassRoomId)
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary" data-save="modal">Delete</button>*@
            </div>
        </div>
    </div>
</div>
