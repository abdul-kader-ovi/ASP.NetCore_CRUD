@model ClassRoutineManagement.Models.Classes

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <h4>Class</h4>
    <div class="modal fade" id="addClasses">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addTeacherLabel">Add Class</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="CreateClasses">
                        <div class="form-group">
                            <label asp-for="CStage" class="control-label"></label>
                            <input asp-for="CStage" class="form-control" />
                            <span asp-validation-for="CStage" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary" data-save="modal">Save</button>*@
                </div>
            </div>
        </div>
    </div>